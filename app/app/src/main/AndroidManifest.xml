<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="un.tpi.carpoolun">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.SearchResultsActivity">
        </activity>
        <activity
                android:name=".activities.CreateCarpoolActivity"
                android:label="@string/title_activity_create_carpool">
        </activity>
        <activity android:name=".activities.SearchCarpoolActivity">
        </activity>
        <activity
                android:name=".activities.SignUpActivity"
                android:label="@string/title_activity_sign_up">
        </activity>
        <activity
                android:name=".activities.SignInActivity"
                android:label="@string/title_activity_sign_in">
        </activity>
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>